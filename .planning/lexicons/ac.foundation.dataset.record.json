{
  "lexicon": 1,
  "id": "ac.foundation.dataset.record",
  "defs": {
    "main": {
      "type": "record",
      "description": "Index record for a WebDataset-backed dataset with references to storage location and sample schema",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "name",
          "schemaRef",
          "storage",
          "createdAt"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Human-readable dataset name",
            "maxLength": 200
          },
          "schemaRef": {
            "type": "string",
            "description": "AT-URI reference to the sampleSchema record for this dataset's samples",
            "maxLength": 500
          },
          "storage": {
            "type": "union",
            "description": "Storage location for dataset files (WebDataset tar archives)",
            "refs": [
              "#storageExternal",
              "#storageBlobs"
            ]
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the dataset",
            "maxLength": 5000
          },
          "metadata": {
            "type": "bytes",
            "description": "Msgpack-encoded metadata dict (arbitrary key-value pairs)",
            "maxLength": 100000
          },
          "tags": {
            "type": "array",
            "description": "Searchable tags for dataset discovery",
            "items": {
              "type": "string",
              "maxLength": 50
            },
            "maxLength": 20
          },
          "size": {
            "type": "ref",
            "ref": "#datasetSize",
            "description": "Dataset size information (optional)"
          },
          "license": {
            "type": "string",
            "description": "License (SPDX identifier preferred)",
            "maxLength": 100
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this dataset record was created"
          }
        }
      }
    },
    "storageExternal": {
      "type": "object",
      "description": "External storage via URLs (S3, HTTP, IPFS, etc.)",
      "required": [
        "type",
        "urls"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "external"
        },
        "urls": {
          "type": "array",
          "description": "WebDataset URLs (supports brace notation like 'data-{000000..000099}.tar')",
          "items": {
            "type": "string",
            "format": "uri",
            "maxLength": 1000
          },
          "minLength": 1
        }
      }
    },
    "storageBlobs": {
      "type": "object",
      "description": "Storage via ATProto PDS blobs",
      "required": [
        "type",
        "blobs"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "blobs"
        },
        "blobs": {
          "type": "array",
          "description": "Array of blob references for WebDataset tar files",
          "items": {
            "type": "blob",
            "description": "Blob reference to a WebDataset tar archive"
          },
          "minLength": 1
        }
      }
    },
    "datasetSize": {
      "type": "object",
      "description": "Information about dataset size",
      "properties": {
        "samples": {
          "type": "integer",
          "description": "Total number of samples in the dataset",
          "minimum": 0
        },
        "bytes": {
          "type": "integer",
          "description": "Total size in bytes",
          "minimum": 0
        },
        "shards": {
          "type": "integer",
          "description": "Number of WebDataset shards",
          "minimum": 1
        }
      }
    }
  }
}
